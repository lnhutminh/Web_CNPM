<div class="mx-auto px-0 py-4">
    {{#if msg}}
    <div class="my-2 alert alert-{{color}} text-center" role="alert">{{msg}}</div>
    {{/if}}
    <div class="card card-form">
        <div class="card-header text-center py-auto">
            <p class="py-3"><b>Create an account</b></p>
        </div>
        <div class="card-body">
            <form method="POST" action="/signup">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control" id="email" name="email" value="">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" value="">
                </div>
                <div class="form-group my-4 text-center">
                    <span style="margin-right: 0.25rem">I'm a</span>
                    <select class="form-select rounded" aria-label="Default select example" name="type">
                        <option value="Student" selected>Student</option>
                        <option value="Teacher">Teacher</option>
                    </select>
                </div>
                <div class="form-check px-0 my-4">
                    <button type="submit" class="btn btn-dark text-center w-100">Create account</button>
                </div>
                <div class="form-group my-4">
                    <p>
                        By clicking Create Account, you agree to E-Learning's <a href="#">Terms of Service</a> 
                        and <a href="#">Privacy Policy</a>                   
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>