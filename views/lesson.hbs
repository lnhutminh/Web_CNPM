<div class="container-fluid mt-4 mx-5">
    <div class="row">
        <div class="col-9 mb-3">
            <h2>{{lesson.title}}</h2>
            <p>{{lesson.des}}</p>
            <video controls src="{{lesson.videoUrl}}" width="100%" controlsList="nodownload" autoplay>       
            </video>
        </div>
        <div class="col-3">
            <h3>Documents</h3>
            {{#ifEquals lesson.documents.length 0}}
            <h6 class="my-3">No Documents</h6>
            {{else}}
            {{#each lesson.documents}}
            <div class="d-flex justify-content-between align-center">
                <a href="{{this.docUrl}}" class="pt-1" target="_blank">{{this.name}}</a>
            </div>
            {{/each}}
            {{/ifEquals}}
            {{#ifEquals otherlessons.length 0}}
            {{else}}
            <h3 class="mt-5">Other lessons:</h3>
            {{#each otherlessons}}
                <a class="btn btn-outline-dark lesson-btn w-100 mb-2" href="/mylearning/lesson/{{this._id}}">
                    {{this.title}}
                </a>
            {{/each}}
            {{/ifEquals}}
        </div>
    </div>
    
</div>